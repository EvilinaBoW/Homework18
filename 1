using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp6
{
    class Animal
    {
        public void MakeSound() => Console.WriteLine("[translate:Некоторый звук]");
    }

    class Car
    {
        public string Brand { get; set; }
        public string Model { get; set; }
        public int Year { get; set; }
        public Car(string brand, string model, int year)
        {
            Brand = brand;
            Model = model;
            Year = year;
        }
        public override string ToString() => $"{Brand} {Model} {Year}";
    }

    class Person
    {
        public string Name { get; set; }
        public int Age { get; set; }
        public Person(string name, int age)
        {
            Name = name;
            Age = age;
        }
        public override string ToString() => $"[translate:Имя]: {Name}, [translate:Возраст]: {Age}";
    }

    class Rectangle
    {
        public double Width { get; set; }
        public double Height { get; set; }
        public Rectangle(double width, double height)
        {
            Width = width;
            Height = height;
        }
        public override string ToString() => $"[translate:Прямоугольник]: {Width} x {Height}";
    }

    class Student
    {
        public string Name { get; set; }
        public int Age { get; set; }
        public Student(string name, int age)
        {
            Name = name;
            Age = age;
        }
        public override string ToString() => $"[translate:Студент имя]: {Name}, [translate:Возраст]: {Age}";
    }

    class Book
    {
        public string Title { get; set; }
        public string Author { get; set; }
        public int Pages { get; set; }
        public Book(string title, string author, int pages)
        {
            Title = title;
            Author = author;
            Pages = pages;
        }
        public override string ToString() => $"{Title} [translate:автор]: {Author}, {Pages} [translate:страниц]";
    }

    class Circle
    {
        public double Radius { get; set; }
        public Circle(double radius)
        {
            Radius = radius;
        }
        public double Area() => Math.PI * Radius * Radius;
        public override string ToString() => $"[translate:Круг с радиусом] {Radius}";
    }

    class BankAccount
    {
        public decimal Balance { get; private set; }
        public BankAccount(decimal initialBalance)
        {
            Balance = initialBalance;
        }
        public void Deposit(decimal amount)
        {
            if (amount > 0) Balance += amount;
        }
        public void Withdraw(decimal amount)
        {
            if (amount > 0 && amount <= Balance) Balance -= amount;
        }
        public override string ToString() => $"[translate:Баланс]: {Balance:C}";
    }

    class Temperature
    {
        private double celsius;
        public double Celsius
        {
            get => celsius;
            set => celsius = value;
        }
        public Temperature(double celsius) { this.celsius = celsius; }
        public double Fahrenheit => celsius * 9 / 5 + 32;
        public override string ToString() => $"{celsius} °C / {Fahrenheit} °F";
    }

    class Time
    {
        public int Hours { get; set; }
        public int Minutes { get; set; }
        public int Seconds { get; set; }
        public Time(int hours, int minutes, int seconds)
        {
            Hours = hours;
            Minutes = minutes;
            Seconds = seconds;
        }
        public override string ToString() => $"{Hours:00}:{Minutes:00}:{Seconds:00}";
    }

    class Point
    {
        public double X { get; set; }
        public double Y { get; set; }
        public double Z { get; set; }
        public Point(double x, double y, double z)
        {
            X = x;
            Y = y;
            Z = z;
        }
        public override string ToString() => $"[translate:Точка]({X}, {Y}, {Z})";
    }

    class Color
    {
        public int R { get; set; }
        public int G { get; set; }
        public int B { get; set; }
        public Color(int r, int g, int b)
        {
            R = r;
            G = g;
            B = b;
        }
        public override string ToString() => $"[translate:Цвет](R={R}, G={G}, B={B})";
    }

    class Email
    {
        public string Address { get; set; }
        public Email(string address)
        {
            Address = address;
        }
        public override string ToString() => $"[translate:Электронная почта]: {Address}";
    }

    class PhoneNumber
    {
        public string Number { get; set; }
        public PhoneNumber(string number)
        {
            Number = number;
        }
        public override string ToString() => $"[translate:Телефонный номер]: {Number}";
    }

    class URL
    {
        public string Address { get; set; }
        public URL(string address)
        {
            Address = address;
        }
        public override string ToString() => $"URL: {Address}";
    }

    internal class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("[translate:Введите число от 1 до 15, чтобы создать и использовать экземпляр класса]:");
            Console.WriteLine("[translate:1: Животное]\n[translate:2: Автомобиль]\n[translate:3: Человек]\n[translate:4: Прямоугольник]\n[translate:5: Студент (демонстрация класса и объекта)]\n[translate:6: Книга]\n[translate:7: Круг]\n[translate:8: Банковский счет]\n[translate:9: Температура]\n[translate:10: Время]\n[translate:11: Точка]\n[translate:12: Цвет]\n[translate:13: Электронная почта]\n[translate:14: Телефонный номер]\n[translate:15: URL]");

            int choice = int.Parse(Console.ReadLine() ?? "0");
            switch (choice)
            {
                case 1:
                    var animal = new Animal();
                    animal.MakeSound();
                    break;
                case 2:
                    var car = new Car("Toyota", "Camry", 2021);
                    Console.WriteLine(car);
                    break;
                case 3:
                    var person = new Person("Alex", 30);
                    Console.WriteLine(person);
                    break;
                case 4:
                    var rectangle = new Rectangle(5.0, 10.0);
                    Console.WriteLine(rectangle);
                    break;
                case 5:
                    var student = new Student("John", 20);
                    Console.WriteLine("[translate:Определение класса]: [translate:класс Студент определяет свойства Имя и Возраст].");
                    Console.WriteLine("[translate:Пример объекта]: [translate:объект Студент с Имя='John' и Возраст=20 является экземпляром этого класса].");
                    Console.WriteLine(student);
                    break;
                case 6:
                    var book = new Book("[translate:C# Основы]", "Jane Doe", 300);
                    Console.WriteLine(book);
                    break;
                case 7:
                    var circle = new Circle(7);
                    Console.WriteLine(circle);
                    Console.WriteLine($"[translate:Площадь]: {circle.Area():F2}");
                    break;
                case 8:
                    var account = new BankAccount(1000m);
                    account.Deposit(500);
                    account.Withdraw(200);
                    Console.WriteLine(account);
                    break;
                case 9:
                    var temp = new Temperature(25);
                    Console.WriteLine(temp);
                    break;
                case 10:
                    var time = new Time(14, 30, 0);
                    Console.WriteLine(time);
                    break;
                case 11:
                    var point = new Point(1, 2, 3);
                    Console.WriteLine(point);
                    break;
                case 12:
                    var color = new Color(255, 100, 50);
                    Console.WriteLine(color);
                    break;
                case 13:
                    var email = new Email("user@example.com");
                    Console.WriteLine(email);
                    break;
                case 14:
                    var phone = new PhoneNumber("+1234567890");
                    Console.WriteLine(phone);
                    break;
                case 15:
                    var url = new URL("https://example.com");
                    Console.WriteLine(url);
                    break;
                default:
                    Console.WriteLine("[translate:Некорректный выбор].");
                    break;
            }

            Console.WriteLine("[translate:А нажмите куда-нибудь для выхода]");
            Console.ReadKey();
        }
    }
}
